<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rekap Nilai - <%= praktikum.nama_praktikum %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-slate-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { currentPath: currentPath, praktikum: praktikum }) %>

        <div class="flex-1 flex flex-col overflow-y-auto">
            <header class="flex items-center justify-end py-3 px-6 bg-white shadow-sm sticky top-0 z-20">
                 <div class="flex items-center space-x-5">
                    </div>
            </header>

            <main class="flex-1 p-6 lg:p-10">
                <div class="mb-6">
                    <a href="/praktikum/<%= praktikum.id %>/mahasiswa" class="inline-flex items-center gap-2 text-sm font-medium text-purple-600 hover:text-purple-800 transition-colors">
                        <i class="fa-solid fa-arrow-left"></i>
                        Kembali ke Daftar Mahasiswa
                    </a>
                </div>
                
                <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8">
                    <div class="flex flex-wrap gap-4 justify-between items-center mb-6">
                        <h1 class="text-2xl sm:text-3xl font-extrabold text-slate-900 tracking-tight">Rekap Nilai</h1>
                        <div class="flex items-center gap-3">
                            <a href="/praktikum/<%= praktikum.id %>/rekap-nilai/pdf" target="_blank" class="inline-flex items-center gap-2 bg-red-50 text-red-700 font-semibold px-4 py-2 text-sm rounded-lg hover:bg-red-100 transition">
                                <i class="fa-solid fa-file-pdf"></i>
                                <span>PDF</span>
                            </a>
                            <a href="/praktikum/<%= praktikum.id %>/rekap-nilai/excel" class="inline-flex items-center gap-2 bg-green-50 text-green-700 font-semibold px-4 py-2 text-sm rounded-lg hover:bg-green-100 transition">
                                <i class="fa-solid fa-file-excel"></i>
                                <span>Excel</span>
                            </a>
                        </div>
                    </div>

                    <div class="overflow-x-auto relative rounded-lg ring-1 ring-slate-200">
                        <table class="w-full text-sm text-center text-slate-600">
                            <thead class="text-xs text-slate-500 uppercase bg-slate-100">
                                <tr>
                                    <th scope="col" class="px-6 py-4 font-semibold text-left">Mahasiswa</th>
                                    <% daftarTugas.forEach(tugas => { %>
                                        <th scope="col" class="px-6 py-4 font-semibold whitespace-nowrap"><%= tugas.judul %></th>
                                    <% }) %>
                                    <th scope="col" class="px-6 py-4 font-semibold bg-slate-200 text-slate-700">Rata-rata</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-200">
                                <% if (daftarMahasiswa && daftarMahasiswa.length > 0) { %>
                                <% daftarMahasiswa.forEach(mhs => { %>
                                    <tr class="hover:bg-purple-50 transition-colors">
                                        <td class="px-6 py-4 text-left">
                                            <p class="font-semibold text-slate-800"><%= mhs.nama %></p>
                                            <p class="text-xs text-slate-500 font-mono"><%= mhs.nim %></p>
                                        </td>
                                        <% daftarTugas.forEach(tugas => { %>
                                            <td class="px-6 py-4 font-medium">
                                                <%= mhs.nilai[tugas.judul] != null ? mhs.nilai[tugas.judul] : '-' %>
                                            </td>
                                        <% }) %>
                                        <td class="px-6 py-4 font-bold bg-slate-50">
                                            <% if (mhs.rataRata != null) { %>
                                                <span class="inline-block px-3 py-1 text-xs rounded-full 
                                                    <%= mhs.rataRata >= 80 ? 'bg-green-100 text-green-800' : (mhs.rataRata >= 60 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                                                    <%= mhs.rataRata.toFixed(2) %>
                                                </span>
                                            <% } else { %>
                                                -
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="<%= daftarTugas.length + 2 %>" class="text-center py-12 text-slate-500">
                                            Belum ada mahasiswa di kelas ini untuk ditampilkan.
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>