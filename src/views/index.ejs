<%- include('layouts/layout') %>

<div class="bg-white shadow-md rounded-md p-6">
  <h1 class="text-2xl font-bold mb-4">Selamat Datang di Labcorner!</h1>
  <a href="/tugas" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">Lihat Daftar Tugas</a>
</div>
<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Tugas</title>
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold text-center">Daftar Tugas</h1>
        <div class="space-y-4 mt-6">
            <% tugasList.forEach(tugas => { %>
                <div class="bg-white p-4 rounded-lg shadow-md flex justify-between items-center">
                    <div>
                        <h2 class="text-xl font-bold"><%= tugas.judul %></h2>
                        <p><%= tugas.deskripsi || 'No description available' %></p>
                    </div>
                    <a href="/tugas/<%= tugas.id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md">Lihat & Kumpulkan</a>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>