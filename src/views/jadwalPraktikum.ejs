<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <title><%= title %></title>
    <style>
        .modal { display: none; }
        .modal.active { display: flex; }
    </style>
</head>
<body class="bg-purple-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { currentPath: currentPath, praktikum: praktikum }) %>

        <main class="flex-1 p-4 sm:p-8 overflow-y-auto">
            <div class="max-w-7xl mx-auto">
                <div class="bg-gradient-to-br from-violet-700 to-purple-400 p-6 sm:p-8 rounded-2xl shadow-lg">
                    <header class="flex flex-wrap gap-4 justify-between items-center mb-8">
                        <div>
                            <h1 class="text-3xl font-bold text-white">Jadwal Praktikum</h1>
                            <p class="text-purple-200">Praktikum: <%= praktikum.nama_praktikum %></p>
                        </div>
                        <button onclick="openAddModal()" class="bg-white text-purple-700 font-bold py-2 px-4 rounded-lg hover:bg-purple-100 transition duration-300 shadow-lg">
                            <i class="fa-solid fa-plus mr-2"></i>Tambah Jadwal
                        </button>
                    </header>

                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <table class="min-w-full leading-normal">
                            <thead>
                                <tr class="border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    <th class="px-5 py-3">No</th>
                                    <th class="px-5 py-3">Hari & Tanggal</th>
                                    <th class="px-5 py-3">Jam</th>
                                    <th class="px-5 py-3">Materi</th>
                                    <th class="px-5 py-3">Ruangan</th>
                                    <th class="px-5 py-3">Pengajar</th>
                                    <th class="px-5 py-3">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (jadwalList.length > 0) { %>
                                    <% jadwalList.forEach((jadwal, index) => { %>
                                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                                        <td class="px-5 py-4 text-sm"><%= index + 1 %></td>
                                        <td class="px-5 py-4 text-sm"><%= new Date(jadwal.tanggal).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                                        <td class="px-5 py-4 text-sm"><%= new Date(jadwal.jam).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %> WIB</td>
                                        <td class="px-5 py-4 text-sm"><%= jadwal.materi %></td>
                                        <td class="px-5 py-4 text-sm"><%= jadwal.ruangan %></td>
                                        <td class="px-5 py-4 text-sm"><%= jadwal.nama_pengajar %></td>
                                        <td class="px-5 py-4 text-sm flex space-x-3">
                                            <button onclick="openEditModal('<%= jadwal.id %>')" class="text-blue-600 hover:text-blue-900"><i class="fa-solid fa-pen-to-square"></i></button>
                                            <form action="/jadwal/delete/<%= jadwal.id %>" method="POST" class="delete-form">
                                                <button type="submit" class="text-red-600 hover:text-red-900"><i class="fa-solid fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="7" class="text-center py-10 text-gray-500">Belum ada jadwal yang dibuat.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <div id="add-modal" class="modal fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50">
        <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md">
            <h3 class="text-2xl font-bold mb-6">Tambah Jadwal Baru</h3>
            <form action="/jadwal/create" method="POST">
                <input type="hidden" name="praktikum_id" value="<%= praktikum.id %>">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label for="tanggal" class="block text-sm font-medium text-gray-700">Tanggal</label>
                        <input type="date" name="tanggal" required class="mt-1 w-full p-2 border rounded-md">
                    </div>
                    <div>
                        <label for="jam" class="block text-sm font-medium text-gray-700">Jam</label>
                        <input type="time" name="jam" required class="mt-1 w-full p-2 border rounded-md">
                    </div>
                </div>
                <div class="mb-4">
                    <label for="materi" class="block text-sm font-medium text-gray-700">Materi</label>
                    <input type="text" name="materi" required class="mt-1 w-full p-2 border rounded-md">
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div>
                        <label for="ruangan" class="block text-sm font-medium text-gray-700">Ruangan</label>
                        <input type="text" name="ruangan" class="mt-1 w-full p-2 border rounded-md">
                    </div>
                    <div>
                        <label for="nama_pengajar" class="block text-sm font-medium text-gray-700">Pengajar</label>
                        <input type="text" name="nama_pengajar" class="mt-1 w-full p-2 border rounded-md">
                    </div>
                </div>
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeModal('add-modal')" class="px-6 py-2 bg-gray-200 rounded-md">Batal</button>
                    <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-md">Simpan</button>
                </div>
            </form>
        </div>
    </div>

    <div id="edit-modal" class="modal fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50">
        <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md">
            <h3 class="text-2xl font-bold mb-6">Edit Jadwal</h3>
            <form id="edit-form" method="POST">
                <input type="hidden" name="praktikum_id" value="<%= praktikum.id %>">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div><label for="edit-tanggal" class="block text-sm font-medium text-gray-700">Tanggal</label><input type="date" id="edit-tanggal" name="tanggal" required class="mt-1 w-full p-2 border rounded-md"></div>
                    <div><label for="edit-jam" class="block text-sm font-medium text-gray-700">Jam</label><input type="time" id="edit-jam" name="jam" required class="mt-1 w-full p-2 border rounded-md"></div>
                </div>
                <div class="mb-4"><label for="edit-materi" class="block text-sm font-medium text-gray-700">Materi</label><input type="text" id="edit-materi" name="materi" required class="mt-1 w-full p-2 border rounded-md"></div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div><label for="edit-ruangan" class="block text-sm font-medium text-gray-700">Ruangan</label><input type="text" id="edit-ruangan" name="ruangan" class="mt-1 w-full p-2 border rounded-md"></div>
                    <div><label for="edit-nama_pengajar" class="block text-sm font-medium text-gray-700">Pengajar</label><input type="text" id="edit-nama_pengajar" name="nama_pengajar" class="mt-1 w-full p-2 border rounded-md"></div>
                </div>
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeModal('edit-modal')" class="px-6 py-2 bg-gray-200 rounded-md">Batal</button>
                    <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-md">Perbarui</button>
                </div>
            </form>
        </div>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // --- Modal Logic ---
        function openAddModal() { document.getElementById('add-modal').classList.add('active'); }
        function closeModal(modalId) { document.getElementById(modalId).classList.remove('active'); }
        async function openEditModal(id) {
            try {
                const response = await fetch(`/api/jadwal/${id}`);
                const jadwal = await response.json();
                if (response.ok) {
                    const form = document.getElementById('edit-form');
                    form.action = `/jadwal/update/${id}`;
                    const tanggal = new Date(jadwal.tanggal);
                    document.getElementById('edit-tanggal').value = tanggal.toISOString().split('T')[0];
                    document.getElementById('edit-jam').value = tanggal.toTimeString().split(' ')[0].substring(0, 5);
                    document.getElementById('edit-materi').value = jadwal.materi;
                    document.getElementById('edit-ruangan').value = jadwal.ruangan;
                    document.getElementById('edit-nama_pengajar').value = jadwal.nama_pengajar;
                    document.getElementById('edit-modal').classList.add('active');
                } else { Swal.fire('Error!', jadwal.error, 'error'); }
            } catch (error) { Swal.fire('Error!', 'Tidak bisa mengambil data jadwal.', 'error'); }
        }

        // --- SweetAlert for Delete ---
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();
                    Swal.fire({
                        title: 'Anda yakin?',
                        text: "Jadwal yang dihapus tidak bisa dikembalikan!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#6D28D9',
                        cancelButtonColor: '#6B7280',
                        confirmButtonText: 'Ya, hapus!',
                        cancelButtonText: 'Batal'
                    }).then(result => { if (result.isConfirmed) form.submit(); });
                });
            });
        });
    </script>
</body>
</html>