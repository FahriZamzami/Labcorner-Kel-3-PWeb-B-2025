<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <title><%= title %></title>
</head>
<body class="bg-purple-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { currentPath: currentPath, praktikum: praktikum }) %>

        <main class="flex-1 p-4 sm:p-8 overflow-y-auto">
            <header class="mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">Detail Kehadiran</h1>
                    <p class="text-gray-500">Praktikum <%= praktikum.nama_praktikum %></p>
                </div>
            </header>

            <div class="bg-white rounded-lg shadow overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr class="border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <th class="px-5 py-3">NIM</th>
                            <th class="px-5 py-3">Nama Mahasiswa</th>
                            
                            <!-- #### PERBAIKAN HEADER KOLOM DI SINI #### -->
                            <% jadwalList.forEach((jadwal) => { %>
                                <!-- Menggunakan jadwal.id untuk nama kolom sesuai permintaan -->
                                <th class="px-5 py-3 text-center">Pertemuan <%= jadwal.id %></th>
                            <% }) %>
                            
                            <th class="px-5 py-3 text-center bg-green-100">Total Hadir</th>
                            <th class="px-5 py-3 text-center bg-red-100">Total Tdk Hadir</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (rekapData.length > 0) { %>
                            <% rekapData.forEach(mhs => { %>
                                <tr class="border-b border-gray-200 hover:bg-gray-50">
                                    <td class="px-5 py-4 text-sm font-mono"><%= mhs.nim %></td>
                                    <td class="px-5 py-4 text-sm"><%= mhs.nama %></td>
                                    <% mhs.kehadiran.forEach(status => { %>
                                        <td class="px-5 py-4 text-sm text-center">
                                            <% if (status === 'Hadir') { %>
                                                <span class="text-green-600"><i class="fa-solid fa-circle-check"></i></span>
                                            <% } else if (status === 'Tidak_Hadir') { %>
                                                <span class="text-red-600"><i class="fa-solid fa-circle-xmark"></i></span>
                                            <% } else { %>
                                                <span class="text-gray-400"><%= status %></span>
                                            <% } %>
                                        </td>
                                    <% }) %>
                                    <td class="px-5 py-4 text-sm text-center font-bold bg-green-50"><%= mhs.totalHadir %></td>
                                    <td class="px-5 py-4 text-sm text-center font-bold bg-red-50"><%= mhs.totalTidakHadir %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="<%= 4 + jadwalList.length %>" class="text-center py-10 text-gray-500">Belum ada mahasiswa yang terdaftar.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>