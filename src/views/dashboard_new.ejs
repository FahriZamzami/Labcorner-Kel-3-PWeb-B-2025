<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Dashboard LabCorner' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-purple-50 via-blue-50 to-indigo-50 min-h-screen">

<!-- Header -->
<header class="bg-white/95 backdrop-blur-lg shadow-lg border-b border-purple-200 sticky top-0 z-40">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-3">
      <div class="flex items-center space-x-4">
        <div class="w-10 h-10 bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
          <i class="fas fa-flask text-white text-lg"></i>
        </div>
        <div>
          <h1 class="text-xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">
            LabCorner
          </h1>
          <p class="text-xs text-gray-600">Laboratory Management System</p>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <div class="text-right hidden sm:block">
          <p class="text-xs text-gray-600" id="currentDate">Loading...</p>
          <p class="text-sm font-semibold text-gray-800" id="currentTime">Loading...</p>
        </div>
        <div class="flex items-center space-x-2 bg-green-100 px-3 py-1 rounded-full">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-xs font-medium text-green-700">Online</span>
        </div>
        <button onclick="logout()" class="bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-semibold px-3 py-2 rounded-lg shadow-md transition-all duration-300 transform hover:scale-105 active:scale-95 flex items-center space-x-2 text-sm">
          <i class="fas fa-sign-out-alt"></i>
          <span class="hidden sm:inline">Logout</span>
        </button>
      </div>
    </div>
  </div>
</header>

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
  <!-- Welcome Section -->
  <div class="mb-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-1">Welcome back! ðŸ‘‹</h2>
    <p class="text-gray-600 text-sm">Here's what's happening in your laboratories today</p>
  </div>

  <!-- Stats Overview -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-4">
    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-3 hover:shadow-lg transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-600">Total Labs</p>
          <p class="text-2xl font-bold text-gray-800"><%= stats.totalLabs %></p>
          <p class="text-xs text-green-600 mt-1">All operational</p>
        </div>
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-building text-blue-600 text-sm"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-3 hover:shadow-lg transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-600">Active Users</p>
          <p class="text-2xl font-bold text-gray-800"><%= stats.activeUsers %></p>
          <p class="text-xs text-blue-600 mt-1">In system</p>
        </div>
        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-users text-green-600 text-sm"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-3 hover:shadow-lg transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-600">Announcements</p>
          <p class="text-2xl font-bold text-gray-800"><%= stats.totalAnnouncements %></p>
          <p class="text-xs text-purple-600 mt-1">Published</p>
        </div>
        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-bullhorn text-purple-600 text-sm"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-3 hover:shadow-lg transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-medium text-gray-600">System Status</p>
          <p class="text-2xl font-bold text-gray-800">100%</p>
          <p class="text-xs text-green-600 mt-1">All systems normal</p>
        </div>
        <div class="w-8 h-8 bg-emerald-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-shield-alt text-emerald-600 text-sm"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
    <!-- Left Column - Labs & Quick Actions -->
    <div class="lg:col-span-3 space-y-4">
      <!-- Laboratories Section -->
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-bold text-gray-800">Laboratories</h3>
          <div class="w-6 h-6 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-microscope text-purple-600 text-xs"></i>
          </div>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
          <% if (labs && labs.length > 0) { %>
            <% labs.forEach(lab => { %>
              <% 
                const labThemes = {
                  'LEA':    { color: 'blue',   icon: 'fa-code' },
                  'LABGIS': { color: 'green',  icon: 'fa-map' },
                  'LBI':    { color: 'purple', icon: 'fa-chart-line' },
                  'LDKOM':  { color: 'orange', icon: 'fa-lightbulb' }
                };
                const theme = labThemes[lab.nama_lab] || { color: 'gray', icon: 'fa-flask' };
              %>
              <a href="/lab/<%= lab.nama_lab %>" class="group block p-3 bg-gradient-to-br from-<%= theme.color %>-50 to-<%= theme.color %>-100 rounded-lg border border-<%= theme.color %>-200 hover:from-<%= theme.color %>-100 hover:to-<%= theme.color %>-200 transition-all duration-300 transform hover:scale-105">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-<%= theme.color %>-500 rounded-lg flex items-center justify-center group-hover:bg-<%= theme.color %>-600 transition-colors">
                    <i class="fas <%= theme.icon %> text-white text-sm"></i>
                  </div>
                  <div>
                    <h4 class="font-bold text-<%= theme.color %>-900 group-hover:text-<%= theme.color %>-800 text-sm"><%= lab.nama_lab %></h4>
                    <p class="text-xs text-<%= theme.color %>-700"><%= lab.deskripsi ? lab.deskripsi.substring(0, 25) + '...' : 'No description' %></p>
                    <p class="text-xs text-<%= theme.color %>-600 mt-1"><%= lab.dosen %></p>
                  </div>
                </div>
              </a>
            <% }); %>
          <% } else { %>
            <p class="col-span-full text-gray-500">No labs found in the database.</p>
          <% } %>
        </div>
      </div>

      <!-- Quick Actions Section -->
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-bold text-gray-800">Quick Actions</h3>
          <div class="w-6 h-6 bg-indigo-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-bolt text-indigo-600 text-xs"></i>
          </div>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
          <a href="/pengumuman" class="group flex items-center p-3 bg-gradient-to-r from-purple-50 to-purple-100 rounded-lg border border-purple-200 hover:from-purple-100 hover:to-purple-200 transition-all duration-300">
            <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center mr-3 group-hover:bg-purple-600 transition-colors">
              <i class="fas fa-plus text-white text-xs"></i>
            </div>
            <div>
              <p class="font-semibold text-purple-900 group-hover:text-purple-800 text-sm">Create Announcement</p>
              <p class="text-xs text-purple-700">Publish new information</p>
            </div>
          </a>
          
          <a href="/pengumuman/list" class="group flex items-center p-3 bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg border border-blue-200 hover:from-blue-100 hover:to-blue-200 transition-all duration-300">
            <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center mr-3 group-hover:bg-blue-600 transition-colors">
              <i class="fas fa-list text-white text-xs"></i>
            </div>
            <div>
              <p class="font-semibold text-blue-900 group-hover:text-blue-800 text-sm">View Announcements</p>
              <p class="text-xs text-blue-700">Browse all announcements</p>
            </div>
          </a>
          
          <a href="/user" class="group flex items-center p-3 bg-gradient-to-r from-green-50 to-green-100 rounded-lg border border-green-200 hover:from-green-100 hover:to-green-200 transition-all duration-300">
            <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center mr-3 group-hover:bg-green-600 transition-colors">
              <i class="fas fa-user-cog text-white text-xs"></i>
            </div>
            <div>
              <p class="font-semibold text-green-900 group-hover:text-green-800 text-sm">Manage Users</p>
              <p class="text-xs text-green-700">Add, edit, or remove users</p>
            </div>
          </a>
          
          <a href="/informasi" class="group flex items-center p-3 bg-gradient-to-r from-orange-50 to-orange-100 rounded-lg border border-orange-200 hover:from-orange-100 hover:to-orange-200 transition-all duration-300">
            <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center mr-3 group-hover:bg-orange-600 transition-colors">
