<% 
    // Menyediakan gambar profil default jika tidak ada dari data user
    const userAvatar = (typeof user !== 'undefined' && user.avatar) 
        ? user.avatar 
        : 'https://i.ibb.co/6n20s3v/4215763.png';
%>

<header class="flex items-center justify-between py-3 px-6 bg-violet-700 text-white shadow-lg sticky top-0 z-20">
    
    <h2 class="text-xl font-bold tracking-wider">LABCORNER</h2>
    
    <div class="flex items-center space-x-4 sm:space-x-6">
        
        <button class="text-purple-200 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </button>

        <button class="text-purple-200 relative hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 10-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 text-xs font-bold text-white ring-2 ring-violet-700">3</span>
        </button>
        
        <div class="relative">
            <img class="h-9 w-9 rounded-full object-cover ring-2 ring-white/50" 
                src="<%= userAvatar %>" 
                alt="User profile" />
        </div>
    </div>
</header>