<!-- src/views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Utama</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 font-sans">

    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <%- include('sidebar', { currentPage: 'home' }) %>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <h2 class="text-2xl font-semibold text-purple-800 mb-4">Selamat Datang di Dashboard Lab!</h2>
        <% if (currentLab) { %>
          <p class="text-lg text-gray-700 mb-4">Anda telah berhasil bergabung dengan praktikum: <span class="font-bold text-purple-600"><%= currentLab.nama_praktikum %></span>.</p>
        <% } else { %>
          <p class="text-lg text-gray-700 mb-4">Anda telah berhasil bergabung dengan lab.</p>
        <% } %>
        <p>Pilih menu di sidebar untuk melanjutkan.</p>
      </main>
    </div>

  </body>
</html>
