<!-- views/detailTugas.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Tugas</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .file-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
      }
      .file-item a {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #6b7280;
      }
      .file-item a:hover {
        color: #4b5563;
      }
      .file-actions {
        display: flex;
        gap: 10px;
      }
    </style>
  </head>
  <body class="bg-gray-100 font-sans">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-60 bg-purple-900 text-white p-4">
        <h1 class="text-xl font-bold mb-6">LABCORNER</h1>
        <ul class="space-y-2">
          <li><a href="#" class="block py-2">📘 Modul Materi</a></li>
          <li><a href="/tugas" class="block py-2 bg-purple-700 rounded px-2">📝 Tugas</a></li>
          <li><a href="#" class="block py-2">📬 Kontak Lab</a></li>
          <li><a href="#" class="block py-2">📤 Pengumpulan</a></li>
          <li><a href="#" class="block py-2">📅 Jadwal Praktikum</a></li>
        </ul>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="flex items-center justify-between mb-6">
          <a href="/tugas" class="text-purple-600 hover:text-purple-800 text-sm">← Kembali ke Daftar Tugas</a>
        </div>

        <h2 class="text-2xl font-semibold text-purple-800 mb-6"> <%= tugas.judul %></h2>

        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
          <h3 class="text-xl font-semibold text-purple-800 mb-2">Instruksi Tugas</h3>
          <p class="text-sm text-gray-600 mb-4">Jatuh Tempo: <%= tugas.deadline %></p>
          <!-- Instruksi file (PDF/GDocs) yang diupload oleh admin -->
          <div class="flex items-center mb-4">
            <a href="<%= tugas.instruksiLink %>" class="text-blue-600 hover:underline" target="_blank">
              <%= tugas.instruksiNama %>
            </a>
            <button class="ml-4 text-sm text-gray-600 hover:text-gray-800">Download</button>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-purple-800 mb-4">Pekerjaan Saya</h3>
          
          <% if (tugas.userFile) { %> 
            <!-- Jika pengguna sudah mengunggah file -->
            <div class="file-item">
              <a href="<%= tugas.userFileLink %>" class="flex items-center" target="_blank">
                <img src="<%= tugas.userFileIcon %>" alt="File Icon" class="w-5 h-5 mr-2">
                <span><%= tugas.userFileNama %></span>
              </a>
              <div class="file-actions">
                <button class="text-sm text-gray-600 hover:text-gray-800">Unduh</button>
                <button class="text-sm text-red-600 hover:text-red-800" onclick="deleteFile('<%= tugas.userFileId %>')">Hapus</button>
              </div>
            </div>
          <% } else { %> 
            <!-- Jika pengguna belum mengunggah file -->
            <div class="text-sm text-gray-600 mb-4">Anda belum mengunggah tugas Anda.</div>
          <% } %>

          <!-- Unggah Lampiran -->
          <div class="mt-4">
            <label class="block text-sm font-semibold text-gray-700">Lampiran (PDF atau Google Docs)</label>
            <input type="file" accept=".pdf, .gdoc" class="mt-2 px-4 py-2 border rounded w-full text-sm" id="fileInput" />
            <button class="mt-4 bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-800" onclick="uploadFile()">Kumpulkan</button>
          </div>
        </div>
      </main>
    </div>

    <script>
      // Function to handle file upload
      function uploadFile() {
        const fileInput = document.getElementById('fileInput');
        const file = fileInput.files[0];
        
        if (!file) {
          alert("Silakan pilih file untuk diunggah.");
          return;
        }

        const formData = new FormData();
        formData.append('file', file);

        // Send the file via AJAX to the server
        fetch('/tugas/upload', {
          method: 'POST',
          body: formData,
        })
        .then(response => response.json())
        .then(data => {
          alert("File berhasil diunggah.");
          location.reload(); // Reload the page after uploading
        })
        .catch(error => {
          alert("Terjadi kesalahan saat mengunggah file.");
        });
      }

      // Function to delete file
      function deleteFile(fileId) {
        if (confirm("Apakah Anda yakin ingin menghapus file ini?")) {
          fetch(`/tugas/hapus/${fileId}`, {
            method: 'DELETE',
          })
          .then(response => response.json())
          .then(data => {
            alert("File berhasil dihapus.");
            location.reload(); // Reload the page after deletion
          })
          .catch(error => {
            alert("Terjadi kesalahan saat menghapus file.");
          });
        }
      }
    </script>
  </body>
</html>