<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Modul - <%= currentLab.nama_praktikum %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <div class="flex min-h-screen">
        <%- include('sidebar', { currentPage: currentPage }) %>

        <main class="flex-1 p-8">
            <!-- Header -->
            <div class="mb-8">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">Daftar Modul</h1>
                        <p class="text-gray-600"><%= currentLab.nama_praktikum %></p>
                    </div>
                    <a href="/dashboard" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>Kembali ke Dashboard
                    </a>
                </div>
            </div>

            <!-- Modul Content -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-xl font-semibold text-gray-900">Semua Modul (<%= daftarModul.length %>)</h2>
                </div>
                
                <div class="p-6">
                    <% if (daftarModul.length > 0) { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% daftarModul.forEach(modul => { %>
                                <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 hover:shadow-md transition-shadow">
                                    <div class="flex items-start justify-between mb-4">
                                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                            <i class="fas fa-book text-blue-600 text-xl"></i>
                                        </div>
                                        <span class="text-xs text-gray-500">
                                            <%= modul.diunggah_pada ? new Date(modul.diunggah_pada).toLocaleDateString('id-ID') : 'N/A' %>
                                        </span>
                                    </div>
                                    
                                    <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= modul.judul %></h3>
                                    
                                    <div class="space-y-2 mb-4">
                                        <div class="flex items-center text-sm text-gray-600">
                                            <i class="fas fa-user mr-2"></i>
                                            <span>Diunggah oleh: <%= modul.user.username %></span>
                                        </div>
                                    </div>
                                    
                                    <div class="flex justify-between items-center">
                                        <a href="/modulMateri" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                            Lihat Modul <i class="fas fa-external-link-alt ml-1"></i>
                                        </a>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-12">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-book-open text-gray-400 text-2xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Belum ada modul</h3>
                            <p class="text-gray-500">Modul praktikum belum diunggah</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
    </div>
</body>
</html>