<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <title><%= title %></title>
</head>
<body class="bg-purple-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { praktikum: praktikum, currentPath: currentPath }) %>

        <main class="flex-1 p-4 sm:p-8 overflow-y-auto">
            <header class="mb-8">
                <a href="/praktikum/<%= praktikum.id %>/kuis" class="text-purple-600 hover:underline flex items-center mb-4">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Kembali ke Daftar Kuis
                </a>
                <div class="flex justify-between items-center">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800">Daftar Soal: <%= kuis.judul %></h1>
                        <p class="text-gray-500">Total Soal: <%= soalList.length %></p>
                    </div>
                    <a href="/kuis/<%= kuis.id %>/soal/baru" class="bg-purple-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-purple-700 transition duration-300">
                        <i class="fa-solid fa-plus mr-2"></i>Tambah Soal Lagi
                    </a>
                </div>
            </header>

            <div class="space-y-4">
                <% if (soalList.length > 0) { %>
                    <% soalList.forEach((soal, index) => { %>
                        <div class="bg-white rounded-lg shadow p-5">
                            <div class="flex justify-between items-start">
                                <div class="flex-grow">
                                    <p class="text-sm text-gray-500">Soal <%= index + 1 %></p>
                                    <p class="text-lg font-semibold text-gray-800 mt-1"><%= soal.pertanyaan %></p>
                                </div>
                                <div class="flex items-center space-x-4 ml-4">
                                    <span class="text-xs font-semibold uppercase px-2 py-1 rounded-full <%= soal.tipe === 'pilihan_ganda' ? 'bg-blue-100 text-blue-800' : 'bg-yellow-100 text-yellow-800' %>">
                                        <%= soal.tipe.replace('_', ' ') %>
                                    </span>
                                    <a href="#" class="text-gray-500 hover:text-blue-600"><i class="fas fa-edit"></i></a>
                                    <a href="#" class="text-gray-500 hover:text-red-600"><i class="fas fa-trash"></i></a>
                                </div>
                            </div>

                            <% if (soal.tipe === 'pilihan_ganda') { %>
                                <div class="mt-4 space-y-2 pl-4 border-l-2 border-gray-200">
                                    <% ['a', 'b', 'c', 'd', 'e'].forEach(opt => { %>
                                        <% if (soal['opsi_' + opt]) { %>
                                            <p class="text-gray-700 <%= soal['opsi_' + opt] === soal.jawaban_benar ? 'font-bold text-green-600' : '' %>">
                                                <%= opt.toUpperCase() %>. <%= soal['opsi_' + opt] %>
                                                <% if (soal['opsi_' + opt] === soal.jawaban_benar) { %>
                                                    <i class="fas fa-check text-green-500 ml-2"></i>
                                                <% } %>
                                            </p>
                                        <% } %>
                                    <% }) %>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-10 bg-white rounded-lg shadow">
                        <h3 class="text-xl font-semibold text-gray-700">Belum Ada Soal</h3>
                        <p class="text-gray-500 mt-2">Kuis ini belum memiliki soal. Silakan tambahkan soal pertama.</p>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html> 