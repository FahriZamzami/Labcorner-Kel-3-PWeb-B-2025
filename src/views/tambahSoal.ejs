<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <title><%= title %></title>
</head>
<body class="bg-purple-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { praktikum: praktikum }) %>

        <main class="flex-1 p-4 sm:p-8 overflow-y-auto">
            <header class="mb-8">
                <h1 class="text-3xl font-bold text-gray-800">Tambah Soal untuk: <%= kuis.judul %></h1>
                <p class="text-gray-500">Praktikum: <%= praktikum.nama_praktikum %></p>
            </header>

            <div class="bg-white rounded-lg shadow p-6 max-w-4xl mx-auto">
                <form action="/kuis/<%= kuis.id %>/soal/create" method="POST">
                    <!-- Pertanyaan -->
                    <div class="mb-6">
                        <label for="pertanyaan" class="block text-xl font-medium text-gray-800 mb-2">Tulis Pertanyaan</label>
                        <textarea id="pertanyaan" name="pertanyaan" rows="3" required
                                  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"></textarea>
                    </div>

                    <!-- Tipe Pertanyaan -->
                    <div class="mb-6">
                        <span class="block text-xl font-medium text-gray-800 mb-2">Tipe Pertanyaan</span>
                        <div class="flex items-center space-x-6">
                            <label class="flex items-center">
                                <input type="radio" name="tipe" value="pilihan_ganda" class="h-5 w-5 text-purple-600" checked>
                                <span class="ml-2 text-lg">Objektif</span>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="tipe" value="essay" class="h-5 w-5 text-purple-600">
                                <span class="ml-2 text-lg">Essay</span>
                            </label>
                        </div>
                    </div>

                    <!-- Opsi Jawaban (hanya untuk objektif) -->
                    <div id="opsi-jawaban-container" class="mb-6">
                        <label class="block text-xl font-medium text-gray-800 mb-2">Opsi Jawaban</label>
                        <div id="opsi-list" class="space-y-3">
                            <!-- Opsi akan ditambahkan oleh JS -->
                        </div>
                        <button type="button" id="tambah-opsi-btn" class="mt-4 text-purple-600 hover:text-purple-800 font-semibold">
                            <i class="fas fa-plus mr-2"></i>Tambah Pilihan
                        </button>
                    </div>

                    <div class="flex justify-between items-center mt-10">
                         <a href="/praktikum/<%= praktikum.id %>/kuis" class="text-gray-600 hover:underline">Selesai & Kembali ke Daftar Kuis</a>
                        <button type="submit" class="bg-purple-600 text-white font-bold py-3 px-8 rounded-lg hover:bg-purple-700 transition duration-300 text-lg">
                            <i class="fas fa-save mr-2"></i> Tambah Soal
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script>
        const tipeRadio = document.querySelectorAll('input[name="tipe"]');
        const opsiContainer = document.getElementById('opsi-jawaban-container');
        const tambahOpsiBtn = document.getElementById('tambah-opsi-btn');
        const opsiList = document.getElementById('opsi-list');
        let opsiIndex = 0;

        function toggleOpsiContainer() {
            const selectedTipe = document.querySelector('input[name="tipe"]:checked').value;
            const isPilihanGanda = selectedTipe === 'pilihan_ganda';
            
            opsiContainer.style.display = isPilihanGanda ? 'block' : 'none';

            // Toggle 'required' attribute on options
            const opsiInputs = opsiContainer.querySelectorAll('input');
            opsiInputs.forEach(input => {
                input.required = isPilihanGanda;
            });
        }

        function addOpsi() {
            const charCode = 'A'.charCodeAt(0) + opsiIndex;
            const newOpsi = document.createElement('div');
            newOpsi.className = 'flex items-center space-x-3';
            newOpsi.innerHTML = `
                <label class="flex items-center text-lg">
                    <input type="radio" name="jawaban_benar" value="${opsiIndex}" class="h-5 w-5 text-purple-600" required>
                    <span class="ml-3 font-semibold">Pilihan ${String.fromCharCode(charCode)}</span>
                </label>
                <input type="text" name="opsi_${opsiIndex}" class="flex-grow p-2 border border-gray-300 rounded-md" required>
                <button type="button" class="text-red-500 hover:text-red-700 remove-opsi-btn"><i class="fas fa-trash"></i></button>
            `;
            opsiList.appendChild(newOpsi);
            opsiIndex++;

            newOpsi.querySelector('.remove-opsi-btn').addEventListener('click', () => {
                newOpsi.remove();
                // We don't decrement index to avoid collision, but we should re-label on production
            });

            // Re-apply required status after adding
            toggleOpsiContainer();
        }
        
        tipeRadio.forEach(radio => radio.addEventListener('change', toggleOpsiContainer));
        tambahOpsiBtn.addEventListener('click', addOpsi);

        // Initial state
        toggleOpsiContainer();
        addOpsi(); // Add first option
        addOpsi(); // Add second option
    </script>
</body>
</html> 