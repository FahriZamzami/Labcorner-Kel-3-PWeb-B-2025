    /* Penataan grid dan spacing agar lebih rapi */
    .dashboard-section {
      margin-bottom: 1.5rem;
    }
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.25rem;
    }
    @media (max-width: 768px) {
      .dashboard-grid {
