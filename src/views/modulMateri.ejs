<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modul Materi - LabCorner</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card-hover {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .card-hover:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 25px 50px -12px rgba(0,0,0,0.25);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .search-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
        .modul-card {
            position: relative;
            overflow: hidden;
        }
        .modul-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        .modul-card:hover::before {
            left: 100%;
        }
        .download-btn {
            position: relative;
            overflow: hidden;
        }
        .download-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255,255,255,0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.3s, height 0.3s;
        }
        .download-btn:hover::before {
            width: 300px;
            height: 300px;
        }
        .download-btn span {
            position: relative;
            z-index: 1;
        }
    </style>
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-indigo-50 min-h-screen">

    <div class="flex min-h-screen">
      <%- include('sidebar', { currentPage: currentPage }) %>

      <main class="flex-1 p-6 lg:p-8 max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8 text-center lg:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full mb-4 lg:mb-6">
            <i class="fas fa-book-open text-white text-2xl"></i>
          </div>
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-3">Modul Materi</h1>
          <p class="text-xl text-gray-600 mb-2">Kumpulan modul praktikum data mining</p>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-indigo-500 mx-auto lg:mx-0 rounded-full"></div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="bg-white rounded-2xl shadow-lg p-6 card-hover border-l-4 border-blue-500">
            <div class="flex items-center">
              <div class="p-3 bg-blue-100 rounded-full">
                <i class="fas fa-book-open text-blue-600 text-xl"></i>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Total Modul</p>
                <p class="text-2xl font-bold text-gray-900"><%= moduls.length %></p>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-6 card-hover border-l-4 border-green-500">
            <div class="flex items-center">
              <div class="p-3 bg-green-100 rounded-full">
                <i class="fas fa-download text-green-600 text-xl"></i>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Download</p>
                <p class="text-2xl font-bold text-gray-900" id="totalDownloads"><%= totalDownloads %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8">
          <div class="gradient-bg px-8 py-6">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold text-white mb-2">üîç Cari Modul</h2>
                <p class="text-blue-100">Temukan modul yang Anda butuhkan</p>
              </div>
              <div class="hidden md:block">
                <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                  <i class="fas fa-search text-white text-xl"></i>
                </div>
              </div>
            </div>
          </div>
          
          <div class="search-container px-8 py-6">
            <div class="flex flex-col lg:flex-row gap-4 items-center">
              <div class="flex-1 w-full">
                <div class="relative">
                  <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                  <input 
                    type="text" 
                    id="searchInput"
                    placeholder="Cari modul berdasarkan judul..." 
                    class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  >
                </div>
              </div>
              
              <div class="flex flex-wrap gap-3">
                <select id="categoryFilter" class="px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                  <option value="">Semua Kategori</option>
                  <option value="pengenalan">Pengenalan</option>
                  <option value="preprocessing">Preprocessing</option>
                  <option value="klasifikasi">Klasifikasi</option>
                  <option value="clustering">Clustering</option>
                  <option value="association">Association Rules</option>
                  <option value="evaluasi">Evaluasi</option>
                </select>
              </div>
            </div>
            
            <div class="flex items-center justify-between mt-4">
              <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-600">Hasil: <span id="resultCount" class="font-semibold"><%= moduls.length %></span> modul</span>
              </div>
              <button id="clearSearch" class="hidden text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors">
                <i class="fas fa-times mr-1"></i>Hapus Filter
              </button>
            </div>
          </div>
        </div>

        <!-- Modul Content -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="gradient-bg px-8 py-6">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold text-white mb-2">üìö Daftar Modul</h2>
                <p class="text-blue-100">Modul praktikum yang tersedia untuk diunduh</p>
              </div>
              <div class="hidden md:block">
                <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                  <i class="fas fa-list-ul text-white text-xl"></i>
                </div>
              </div>
            </div>
          </div>
          
          <div class="p-8">
            <div id="modulGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% if (moduls && moduls.length > 0) { %>
                <% moduls.forEach(function(modul, idx) { %>
                  <% 
                    const gradients = [
                      'modul-gradient-1', 'modul-gradient-2', 'modul-gradient-3', 'modul-gradient-4',
                      'modul-gradient-5', 'modul-gradient-6', 'modul-gradient-7', 'modul-gradient-8',
                      'modul-gradient-9', 'modul-gradient-10', 'modul-gradient-11', 'modul-gradient-12'
                    ];
                    const gradientClass = gradients[idx % gradients.length];
                    const colors = [
                      'from-amber-100 to-orange-200', 'from-rose-100 to-pink-200', 'from-blue-100 to-indigo-200',
                      'from-emerald-100 to-teal-200', 'from-violet-100 to-purple-200', 'from-cyan-100 to-blue-200',
                      'from-lime-100 to-green-200', 'from-sky-100 to-blue-200', 'from-fuchsia-100 to-pink-200',
                      'from-indigo-100 to-purple-200', 'from-teal-100 to-cyan-200', 'from-orange-100 to-amber-200'
                    ];
                    const colorClass = colors[idx % colors.length];
                    const borderColors = [
                      'border-amber-200', 'border-rose-200', 'border-blue-200', 'border-emerald-200',
                      'border-violet-200', 'border-cyan-200', 'border-lime-200', 'border-sky-200',
                      'border-fuchsia-200', 'border-indigo-200', 'border-teal-200', 'border-orange-200'
                    ];
                    const borderClass = borderColors[idx % borderColors.length];
                    
                    // Determine category based on modul title
                    let category = 'pengenalan';
                    const title = modul.judul.toLowerCase();
                    if (title.includes('preprocessing') || title.includes('file') || title.includes('import')) {
                      category = 'preprocessing';
                    } else if (title.includes('klasifikasi') || title.includes('decision') || title.includes('svm')) {
                      category = 'klasifikasi';
                    } else if (title.includes('clustering') || title.includes('kmeans') || title.includes('dbscan')) {
                      category = 'clustering';
                    } else if (title.includes('apriori') || title.includes('fp-growth') || title.includes('association')) {
                      category = 'association';
                    } else if (title.includes('evaluasi') || title.includes('evaluation')) {
                      category = 'evaluasi';
                    }
                  %>
                  <div class="modul-card bg-gradient-to-br <%= colorClass %> rounded-3xl shadow-xl overflow-hidden card-hover border-2 <%= borderClass %>" 
                       data-title="<%= modul.judul %>" data-description="" data-category="<%= category %>" data-size="">
                    <div class="p-6">
                      <div class="flex items-center justify-between mb-4">
                        <div class="w-14 h-14 bg-white bg-opacity-40 rounded-2xl flex items-center justify-center backdrop-blur-sm border border-white border-opacity-50 shadow-lg">
                          <i class="fas fa-file-pdf text-gray-700 text-xl"></i>
                        </div>
                        <span class="bg-white bg-opacity-40 text-gray-700 text-xs font-bold px-3 py-1 rounded-full backdrop-blur-sm border border-white border-opacity-50 shadow-sm">PDF</span>
                      </div>
                      <h3 class="text-lg font-bold text-gray-800 mb-3 leading-tight"><%= modul.judul %></h3>
                      <p class="text-gray-600 text-sm mb-5">Diunggah oleh: <%= modul.user ? modul.user.username : '-' %></p>
                      <div class="flex items-center justify-between">
                        <span class="text-gray-500 text-xs font-medium"><%= modul.file_path %></span>
                        <a href="/modulMateri/download/<%= modul.id %>" 
                           class="bg-white bg-opacity-60 hover:bg-opacity-80 text-gray-700 px-5 py-2.5 rounded-2xl text-sm font-bold transition-all duration-300 shadow-lg border border-white border-opacity-50 download-btn transform hover:scale-105">
                          <span><i class="fas fa-download mr-2"></i>Download</span>
                        </a>
                      </div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <!-- No Moduls Message -->
                <div class="col-span-full text-center py-16">
                  <div class="w-24 h-24 bg-gradient-to-r from-gray-400 to-gray-500 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-book-open text-white text-3xl"></i>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-3">Belum ada modul</h3>
                  <p class="text-gray-600 text-lg mb-6">Modul praktikum belum tersedia untuk praktikum ini</p>
                  <a href="/dashboard" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>Kembali ke Dashboard
                  </a>
                </div>
              <% } %>
            </div>

            <!-- No Results Message -->
            <div id="noResults" class="hidden text-center py-16">
              <div class="w-24 h-24 bg-gradient-to-r from-gray-400 to-gray-500 rounded-full flex items-center justify-center mx-auto mb-6">
                <i class="fas fa-search text-white text-3xl"></i>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Tidak ada hasil</h3>
              <p class="text-gray-600 text-lg mb-6">Coba ubah kata kunci pencarian atau filter kategori</p>
              <button onclick="clearAllFilters()" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                <i class="fas fa-refresh mr-2"></i>Reset Pencarian
              </button>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Search JavaScript -->
    <script>
      let downloadCount = <%= totalDownloads %>;
      
      // Function to update download count
      function updateDownloadCount() {
        downloadCount++;
        document.getElementById('totalDownloads').textContent = downloadCount;
      }
      
      // Function to handle modul download
      function downloadModul(modulId) {
        // Update download count
        updateDownloadCount();
        
        // Add visual feedback
        const btn = event.target.closest('.download-btn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-check mr-2"></i>Downloaded';
        btn.classList.add('bg-green-500', 'hover:bg-green-600');
        
        setTimeout(() => {
          btn.innerHTML = originalText;
          btn.classList.remove('bg-green-500', 'hover:bg-green-600');
        }, 2000);
        
        // Simulate download (you can replace this with actual download logic)
        console.log(`Downloading modul ${modulId}`);
      }

      document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const clearSearchBtn = document.getElementById('clearSearch');
        const resultCount = document.getElementById('resultCount');
        const noResults = document.getElementById('noResults');
        const modulGrid = document.getElementById('modulGrid');
        const modulCards = document.querySelectorAll('.modul-card');
        const categoryFilter = document.getElementById('categoryFilter');

        // Search function
        function filterModuls() {
          const searchTerm = searchInput.value.toLowerCase();
          const selectedCategory = categoryFilter.value;
          
          let visibleCount = 0;

          modulCards.forEach(card => {
            const title = card.dataset.title.toLowerCase();
            const category = card.dataset.category;

            // Check if card matches search term
            const matchesSearch = title.includes(searchTerm);
            
            // Check if card matches category filter
            const matchesCategory = !selectedCategory || category === selectedCategory;

            if (matchesSearch && matchesCategory) {
              card.style.display = 'block';
              visibleCount++;
              
              // Highlight search terms if there's a search term
              if (searchTerm) {
                highlightSearchTerms(card, searchTerm);
              } else {
                removeHighlights(card);
              }
            } else {
              card.style.display = 'none';
              removeHighlights(card);
            }
          });

          // Update result count
          resultCount.textContent = visibleCount;

          // Show/hide no results message
          if (visibleCount === 0) {
            noResults.classList.remove('hidden');
            modulGrid.classList.add('hidden');
          } else {
            noResults.classList.add('hidden');
            modulGrid.classList.remove('hidden');
          }

          // Show/hide clear search button
          if (searchTerm || selectedCategory) {
            clearSearchBtn.classList.remove('hidden');
          } else {
            clearSearchBtn.classList.add('hidden');
          }
        }

        // Function to highlight search terms
        function highlightSearchTerms(card, searchTerm) {
          const titleElement = card.querySelector('h3');
          
          if (titleElement) {
            const originalTitle = card.dataset.title;
            const highlightedTitle = originalTitle.replace(
              new RegExp(searchTerm, 'gi'),
              match => `<mark class="bg-yellow-200 px-1 rounded">${match}</mark>`
            );
            titleElement.innerHTML = highlightedTitle;
          }
        }

        // Function to remove highlights
        function removeHighlights(card) {
          const titleElement = card.querySelector('h3');
          
          if (titleElement) {
            titleElement.innerHTML = card.dataset.title;
          }
        }

        // Event listeners
        searchInput.addEventListener('input', debounce(filterModuls, 300));
        categoryFilter.addEventListener('change', filterModuls);

        // Clear all filters
        window.clearAllFilters = function() {
          searchInput.value = '';
          categoryFilter.value = '';
          filterModuls();
        };

        // Clear search button
        clearSearchBtn.addEventListener('click', clearAllFilters);

        // Add keyboard shortcuts
        document.addEventListener('keydown', function(e) {
          // Ctrl/Cmd + K to focus search
          if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
            e.preventDefault();
            searchInput.focus();
          }
          
          // Escape to clear search
          if (e.key === 'Escape' && document.activeElement === searchInput) {
            clearAllFilters();
          }
        });

        // Debounce function to optimize search performance
        function debounce(func, wait) {
          let timeout;
          return function executedFunction(...args) {
            const later = () => {
              clearTimeout(timeout);
              func(...args);
            };
            clearTimeout(timeout);
            timeout = setTimeout(later, wait);
          };
        }

        // Initialize with correct count
        filterModuls();
      });
    </script>
  </body>
</html>