            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <i class="fas fa-file-alt text-purple-600 text-xs"></i>
            </div>
            <div class="flex-1">
              <p class="font-semibold text-gray-800 text-sm">Assignment submitted</p>
              <p class="text-xs text-gray-600">5 new submissions in LBI</p>
            </div>
            <span class="text-xs text-gray-500">1 hour ago</span>
          </div>
          
          <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
            <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
              <i class="fas fa-tools text-orange-600 text-xs"></i>
            </div>
            <div class="flex-1">
              <p class="font-semibold text-gray-800 text-sm">System maintenance</p>
              <p class="text-xs text-gray-600">Database backup completed</p>
            </div>
            <span class="text-xs text-gray-500">3 hours ago</span>
          </div>
        </div>
      </div>

      <!-- Lab Performance Overview -->
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-bold text-gray-800">Lab Performance Overview</h3>
          <div class="w-6 h-6 bg-emerald-100 rounded-lg flex items-center justify-center">
            <i class="fas fa-trophy text-emerald-600 text-xs"></i>
          </div>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
          <div class="p-3 bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg border border-blue-200">
            <div class="flex items-center space-x-2 mb-2">
              <div class="w-6 h-6 bg-blue-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-code text-white text-xs"></i>
              </div>
              <h4 class="font-bold text-blue-900 text-sm">LEA</h4>
            </div>
            <div class="space-y-1">
              <div class="flex justify-between text-xs">
                <span class="text-blue-700">Completion Rate</span>
                <span class="font-semibold text-blue-900">94%</span>
