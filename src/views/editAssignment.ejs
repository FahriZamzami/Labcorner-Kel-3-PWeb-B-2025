<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Penugasan - LABCORNER</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="bg-[#F9F5FF]">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <%- include('partials/sidebar', { praktikum }) %>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-y-auto">
            <!-- Header -->
            <header class="flex items-center justify-between py-3 px-6 bg-white shadow-sm sticky top-0 z-20">
                <h2 class="text-xl font-semibold text-gray-800">LABCORNER</h2>
                <div class="flex items-center space-x-5">
                    <img src="https://i.ibb.co/68q746Z/logo-web.png" alt="Logo" class="h-8 w-8 rounded-full">
                    <button class="text-gray-500 relative">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 10-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" /></svg>
                    </button>
                    <div class="relative">
                        <img class="h-9 w-9 rounded-full" src="https://i.ibb.co/6n20s3v/4215763.png" alt="User profile">
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="flex-1 p-10">
                <div class="bg-white rounded-2xl shadow-lg p-8">
                    <h2 class="text-xl font-bold text-gray-800 mb-6">Edit Penugasan</h2>
                    <div class="bg-[#F3E8FF] rounded-xl p-8">
                        <%# Pastikan Anda mengirim objek 'assignment' dan 'praktikum' dari controller %>
                        <% if (assignment) { %>
                            <form action="/penugasan/edit/<%= assignment.id %>" method="POST" enctype="multipart/form-data">
                                <!-- Input Judul -->
                                <div class="mb-5">
                                    <label class="block text-gray-700 text-sm font-bold mb-2" for="judul">Judul</label>
                                    <input name="judul" id="judul" class="appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-500" type="text" value="<%= assignment.judul %>" required>
                                </div>

                                <!-- Input Deskripsi -->
                                <div class="mb-5">
                                    <label class="block text-gray-700 text-sm font-bold mb-2" for="deskripsi">Deskripsi</label>
                                    <textarea name="deskripsi" id="deskripsi" rows="4" class="appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-500"><%= assignment.deskripsi %></textarea>
                                </div>

                                <!-- Tambah File -->
                                <div class="mb-8">
                                    <label class="block text-gray-700 text-sm font-bold mb-2">Tambah File</label>
                                    <div class="flex items-center gap-4">
                                        <div class="flex-grow bg-white border border-gray-300 rounded-lg px-4 py-3 flex items-center gap-3">
                                            <svg class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                            <div id="file-display" class="flex items-center gap-3">
                                                <% if (assignment.fileTugas) { %>
                                                    <a href="/uploads/<%= assignment.fileTugas %>" target="_blank" class="text-blue-600 underline hover:text-blue-800">
                                                        <%= assignment.fileTugas %>
                                                    </a>
                                                    <button type="button" class="text-red-500 hover:text-red-700" onclick="hapusFileTugas()">
                                                        Hapus File
                                                    </button>
                                                <% } else { %>
                                                    <span class="text-gray-700" id="file-name">Tidak ada file terunggah</span>
                                                <% } %>
                                            </div>
                                        </div>
                                        <label for="fileTugas" class="cursor-pointer bg-purple-200 text-purple-700 p-3 rounded-lg hover:bg-purple-300">
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6"></path></svg>
                                        </label>
                                        <input name="fileTugas" id="fileTugas" type="file" class="hidden">
                                    </div>
                                </div>

                                <!-- Hidden input untuk hapus file -->
                                <input type="hidden" name="hapusFile" id="hapusFile" value="false">

                                <!-- Tenggat waktu dan toggle -->
                                <div class="grid grid-cols-1 md:grid-cols-2 md:gap-x-6 mb-5">
                                    <div>
                                        <label class="block text-gray-700 text-sm font-bold mb-2">Tenggat Waktu</label>
                                        <div class="flex space-x-2">
                                            <% const deadline = new Date(assignment.batas_waktu); %>
                                            <% const tgl = deadline.toISOString().split('T')[0]; %>
                                            <% const jam = deadline.toTimeString().substring(0,5); %>
                                            <input type="date" name="tanggal" class="border border-gray-300 rounded-lg px-3 py-3 w-full focus:outline-none focus:ring-2 focus:ring-purple-500" value="<%= tgl %>" required>
                                            <input type="time" name="jam" class="border border-gray-300 rounded-lg px-3 py-3 w-32 focus:outline-none focus:ring-2 focus:ring-purple-500" value="<%= jam %>" required>
                                        </div>
                                    </div>
                                    <div class="flex items-end mt-4 md:mt-0">
                                        <label class="inline-flex items-center cursor-pointer">
                                            <input type="checkbox" name="otomatis" class="form-checkbox h-5 w-5 rounded text-purple-600 border-gray-400 focus:ring-purple-500" <%= assignment.tutup_penugasan ? 'checked' : '' %>>
                                            <span class="ml-3 text-gray-700">Otomatis Tutup Penugasan</span>
                                        </label>
                                    </div>
                                </div>

                                <!-- Tombol Simpan / Batal -->
                                <div class="flex items-center justify-between mt-10">
                                    <button type="button" onclick="document.getElementById('deleteForm').submit()" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded-lg">Hapus</button>
                                    <div class="flex items-center gap-4">
                                        <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-6 rounded-lg border border-gray-300" type="submit">Simpan</button>
                                        <a href="/assignments" class="bg-[#A855F7] hover:bg-[#9333ea] text-white font-bold py-2 px-6 rounded-lg" type="button">Batal</a>
                                    </div>
                                </div>
                            </form>

                            <!-- Form tersembunyi untuk menghapus -->
                        <% } else { %>
                            <p class="text-center text-gray-600">Penugasan tidak ditemukan.</p>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>
<script>
    // Script untuk menampilkan nama file yang dipilih
    const fileInput = document.getElementById('fileTugas');
    const fileNameDisplay = document.getElementById('file-name');
    if(fileInput && fileNameDisplay) {
        fileInput.addEventListener('change', function() {
            if (this.files.length > 0) {
                fileNameDisplay.textContent = this.files[0].name;
            }
        });
    }

    function hapusFileTugas() {
        const confirmDelete = confirm('Yakin ingin menghapus file ini?');
        if (confirmDelete) {
            document.getElementById('hapusFile').value = "true";
            document.getElementById('file-display').innerHTML = '<span class="text-gray-700">Tidak ada file terunggah</span>';
        }
    }
</script>
</body>
</html>