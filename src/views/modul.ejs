<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <title><%= title %></title>
    
    <style>
        /* Gaya tambahan untuk backdrop modal */
        #modal-toggle:checked ~ .modal-backdrop {
            display: flex;
        }
        .dropdown:focus-within .dropdown-menu { display: block; }
    </style>
</head>
<body class="bg-slate-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { currentPath: currentPath, praktikum: praktikum }) %>

        <main class="flex-1 p-6 lg:p-10 overflow-y-auto">
            <header class="flex flex-wrap gap-4 justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-extrabold text-slate-800 tracking-tight">Modul Praktikum</h1>
                    <p class="text-slate-500 mt-1">Kelas: <%= praktikum.nama_praktikum %></p>
                </div>
                <label for="modal-toggle" class="cursor-pointer inline-flex items-center gap-2 bg-purple-600 text-white font-semibold px-5 py-2.5 rounded-lg shadow-md hover:bg-purple-700 transition-colors">
                    <i class="fa-solid fa-plus"></i>
                    <span>Unggah Modul</span>
                </label>
            </header>
            
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="relative mb-6">
                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4">
                        <i class="fa-solid fa-search text-slate-400"></i>
                    </div>
                    <input type="text" id="modulSearch" class="block w-full rounded-lg border-slate-300 bg-slate-50 py-3 pl-12 pr-4 text-sm placeholder-slate-500 focus:border-purple-500 focus:ring-1 focus:ring-purple-500" placeholder="Cari modul berdasarkan judul...">
                </div>
                
                <div class="space-y-4">
                    <% if (modules && modules.length > 0) { %>
                        <% modules.forEach(module => { %>
                            <div class="modul-item flex items-center gap-4 p-4 rounded-xl hover:bg-slate-50 transition-colors">
                                <div class="text-red-500 bg-red-100 p-3 rounded-lg">
                                    <i class="fa-solid fa-file-pdf fa-lg"></i>
                                </div>
                                <div class="flex-grow">
                                    <h3 class="font-semibold text-slate-800"><%= module.judul %></h3>
                                    <p class="text-xs text-slate-500">
                                        <% if(module.diunggah_pada) { %>
                                            Diunggah: <%= new Date(module.diunggah_pada).toLocaleString('id-ID', { dateStyle: 'long', timeStyle: 'short' }) %>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="relative dropdown" onclick="event.stopPropagation()">
                                    <button tabindex="0" class="text-slate-500 hover:text-slate-800 p-2 rounded-full hover:bg-slate-200">
                                        <i class="fa-solid fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu hidden absolute right-0 mt-2 w-48 bg-white shadow-xl rounded-lg z-10 ring-1 ring-black ring-opacity-5 overflow-hidden">
                                        <li>
                                            <a href="/download/<%= encodeURIComponent(module.file_path) %>" class="flex items-center gap-3 px-4 py-3 text-sm text-slate-700 hover:bg-slate-100">
                                                <i class="fa-solid fa-download fa-fw"></i>
                                                <span>Unduh</span>
                                            </a>
                                        </li>
                                        <li>
                                            <form action="/modul/delete/<%= module.id %>" method="POST" class="delete-form">
                                                <button type="submit" class="w-full text-left flex items-center gap-3 px-4 py-3 text-sm text-red-600 hover:bg-slate-100">
                                                    <i class="fa-solid fa-trash fa-fw"></i>
                                                    <span>Hapus</span>
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div id="no-results" class="text-center py-16">
                            <i class="fa-solid fa-file-circle-xmark text-4xl text-slate-300 mb-4"></i>
                            <p class="text-slate-500">Belum ada modul yang diunggah untuk praktikum ini.</p>
                        </div>
                    <% } %>
                    <div id="no-search-results" class="hidden text-center py-16">
                         <i class="fa-solid fa-magnifying-glass text-4xl text-slate-300 mb-4"></i>
                         <p class="text-slate-500">Modul yang Anda cari tidak ditemukan.</p>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <input type="checkbox" id="modal-toggle" class="hidden">
    
    <div class="modal-backdrop fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
        <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-lg">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-bold text-slate-800">Unggah Modul Baru</h3>
                <label for="modal-toggle" class="cursor-pointer text-2xl text-slate-400 hover:text-slate-800">&times;</label>
            </div>
            
            <form action="/praktikum/<%= praktikum.id %>/modul/upload" method="POST" enctype="multipart/form-data">
                <div class="mb-5">
                    <label for="judul" class="block text-sm font-semibold text-slate-700 mb-2">Judul Modul</label>
                    <input type="text" name="judul" id="judul" required class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Contoh: Modul 1 - Instalasi">
                </div>
                <div class="mb-8">
                    <label for="fileModul" class="block text-sm font-semibold text-slate-700 mb-2">Pilih File</label>
                    <input type="file" name="fileModul" id="fileModul" required class="w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-purple-100 file:text-purple-700 hover:file:bg-purple-200">
                    <p class="text-xs text-slate-500 mt-2">Format yang didukung: PDF, DOCX, PPTX.</p>
                </div>
                <div class="flex justify-end space-x-4">
                    <label for="modal-toggle" class="px-6 py-2.5 bg-slate-200 text-slate-800 rounded-lg cursor-pointer hover:bg-slate-300 font-medium">Batal</label>
                    <button type="submit" class="px-6 py-2.5 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-semibold">Unggah</button>
                </div>
            </form>
        </div>
    </div>
    
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Search functionality
            const searchInput = document.getElementById('modulSearch');
            const modulItems = document.querySelectorAll('.modul-item');
            const noResultsDiv = document.getElementById('no-search-results');
            const initialEmptyDiv = document.querySelector('.space-y-4 > div[id="no-results"]');

            if (modulItems.length > 0) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    let visibleItemCount = 0;

                    modulItems.forEach(function(item) {
                        const title = item.querySelector('h3').textContent.toLowerCase();
                        
                        if (title.includes(searchTerm)) {
                            item.style.display = 'flex';
                            visibleItemCount++;
                        } else {
                            item.style.display = 'none';
                        }
                    });

                    if (noResultsDiv) {
                        noResultsDiv.classList.toggle('hidden', visibleItemCount > 0);
                    }
                     if(initialEmptyDiv) {
                        initialEmptyDiv.classList.toggle('hidden', searchTerm.length > 0 || visibleItemCount > 0);
                    }
                });
            } else {
                searchInput.disabled = true;
            }

            // Dropdown logic
            document.querySelectorAll('.dropdown > button').forEach(button => {
                button.addEventListener('click', e => {
                    const menu = button.nextElementSibling;
                    document.querySelectorAll('.dropdown-menu').forEach(m => {
                        if (m !== menu) m.classList.add('hidden');
                    });
                    menu.classList.toggle('hidden');
                });
            });

            window.addEventListener('click', (e) => {
                 if (!e.target.closest('.dropdown')) {
                    document.querySelectorAll('.dropdown-menu').forEach(menu => menu.classList.add('hidden'));
                 }
            });

            // Delete confirmation
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();
                    Swal.fire({
                        title: 'Apakah Anda yakin?',
                        text: "Modul yang dihapus tidak dapat dikembalikan!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6B7280',
                        confirmButtonText: 'Ya, hapus!',
                        cancelButtonText: 'Batal'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>