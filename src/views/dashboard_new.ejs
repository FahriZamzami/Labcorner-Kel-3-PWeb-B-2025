          <a href="/statistics" class="group flex items-center p-3 bg-gradient-to-r from-indigo-50 to-indigo-100 rounded-lg border border-indigo-200 hover:from-indigo-100 hover:to-indigo-200 transition-all duration-300">
            <div class="w-8 h-8 bg-indigo-500 rounded-lg flex items-center justify-center mr-3 group-hover:bg-indigo-600 transition-colors">
              <i class="fas fa-chart-bar text-white text-xs"></i>
            </div>
            <div>
              <p class="font-semibold text-indigo-900 group-hover:text-indigo-800 text-sm">View Statistics</p>
              <p class="text-xs text-indigo-700">Submission reports</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Recent Activity Section -->
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-bold text-gray-800">Recent Activity</h3>
