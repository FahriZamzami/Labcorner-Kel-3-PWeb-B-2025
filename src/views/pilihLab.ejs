<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pilih Lab</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Modal Styles */
      .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4); /* Fallback for older browsers */
        padding-top: 60px;
      }

      .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 10px;
      }

      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }

      .close:hover,
      .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body class="bg-gradient-to-br from-purple-700 to-purple-500 font-sans">

    <div class="flex min-h-screen justify-center items-center py-10">
      <div class="text-white p-8 rounded-xl shadow-lg max-w-5xl w-full">
        <h2 class="text-3xl font-bold mb-8 text-center">Pilih Lab dan Masukkan Kode Akses</h2>
        
        <% if (error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline"><%= error %></span>
          </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
          <% if (daftarLab && daftarLab.length > 0) { %>
            <% daftarLab.forEach((lab) => { %>
              <div class="bg-white p-6 rounded-xl shadow-lg">
                <h4 class="text-xl font-semibold mb-4 text-center text-purple-800"><%= lab.nama_praktikum %></h4>
               <a href="/pilihLab/enterCode/<%= lab.id %>" class="block bg-purple-700 text-white text-center px-6 py-2 rounded-md mt-4 w-full shadow-md hover:bg-purple-800">
                 Masuk Kelas</a>
              </div>

            <% }); %>
          <% } else { %>
            <p class="col-span-full text-center text-gray-200">Tidak ada praktikum yang tersedia saat ini.</p>
          <% } %>
        </div>
      </div>
    </div>

    <% if (daftarLab && daftarLab.length > 0) { %>
      <% daftarLab.forEach((lab) => { %>
        <div id="modal-<%= lab.id %>" class="modal">
          <div class="modal-content">
            <span class="close" onclick="closeModal(<%= lab.id %>)">&times;</span>
            <h2 class="text-center text-xl font-semibold mb-4">Masukkan Kode Akses untuk <%= lab.nama_praktikum %></h2>
            <form action="/pilihLab/joinLab" method="POST">
              <input type="hidden" name="labId" value="<%= lab.id %>" />
              <input type="text" name="labCode" class="mt-2 px-4 py-2 border border-purple-400 rounded-md w-full text-gray-700" placeholder="Masukkan Kode Akses" required />
              <button type="submit" class="bg-purple-700 text-white px-6 py-2 rounded-md mt-4 w-full shadow-md hover:bg-purple-800">Gabung Lab</button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } %>

    <script>
      // Function to open the modal for the specific lab
      function openModal(labId) {
        document.getElementById('modal-' + labId).style.display = 'block';
      }

      // Function to close the modal for the specific lab
      function closeModal(labId) {
        document.getElementById('modal-' + labId).style.display = 'none';
      }

      // Close modal when clicking anywhere outside the modal content
      window.onclick = function(event) {
        // Find all elements with class 'modal'
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
          if (event.target === modal) {
            modal.style.display = "none";
          }
        });
      }

      // Optional: Auto-open modal if there was an error related to a specific lab
      // This would require passing the problematic labId back from the server with the error message
      // For now, it just displays the error message at the top.
    </script>
  </body>
</html>