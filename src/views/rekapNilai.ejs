<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rekap Nilai - Labcorner</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }
        .table-row-hover:hover {
            background-color: #f8fafc;
            transform: scale(1.01);
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }
        .btn-secondary {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            transition: all 0.3s ease;
        }
        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 154, 158, 0.4);
        }
        .cute-bg {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        }
        .bounce-animation {
            animation: bounce 2s infinite;
        }
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 font-sans min-h-screen">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <%- include('sidebar', { currentPage: 'rekapNilai' }) %>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="gradient-bg text-white shadow-xl">
                <div class="px-8 py-6">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="p-3 bg-white bg-opacity-20 rounded-full bounce-animation">
                                <i class="fas fa-chart-line text-3xl"></i>
                            </div>
                            <div>
                                <h1 class="text-3xl font-bold"> Rekap Nilai Praktikum</h1>
                                <p class="text-lg opacity-90"> Lihat perkembangan nilai Anda</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="p-3 bg-white bg-opacity-20 rounded-full pulse-animation">
                                <i class="fas fa-calendar-alt text-xl"></i>
                            </div>
                            <span class="text-lg opacity-90">
                                <%= new Date().toLocaleDateString('id-ID', { 
                                    weekday: 'long', 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </span>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="flex-1 overflow-y-auto p-8">
                <!-- Informasi Mahasiswa -->
                <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-4 border-purple-100">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-6">
                            <div class="p-4 rounded-2xl bg-gradient-to-br from-purple-400 to-purple-600 text-white">
                                <i class="fas fa-user-graduate text-3xl"></i>
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= namaMahasiswa %></h2>
                                <p class="text-lg text-gray-600">Mahasiswa Aktif</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-4xl font-bold text-purple-600 mb-2"><%= nilaiRataRata %></div>
                            <div class="text-lg text-gray-600">Nilai Rata-rata</div>
                        </div>
                    </div>
                </div>

                <!-- Statistik Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
                    <!-- Total Tugas -->
                    <div class="bg-white rounded-2xl shadow-xl p-8 card-hover border-4 border-blue-100">
                        <div class="flex items-center">
                            <div class="p-4 rounded-2xl bg-gradient-to-br from-blue-400 to-blue-600 text-white mr-6">
                                <i class="fas fa-tasks text-3xl"></i>
                            </div>
                            <div>
                                <p class="text-lg font-medium text-gray-600 mb-2"> Total Tugas</p>
                                <p class="text-4xl font-bold text-gray-900"><%= rekapNilai.length %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Tugas Dinilai -->
                    <div class="bg-white rounded-2xl shadow-xl p-8 card-hover border-4 border-green-100">
                        <div class="flex items-center">
                            <div class="p-4 rounded-2xl bg-gradient-to-br from-green-400 to-green-600 text-white mr-6">
                                <i class="fas fa-check-circle text-3xl"></i>
                            </div>
                            <div>
                                <p class="text-lg font-medium text-gray-600 mb-2"> Tugas Dinilai</p>
                                <p class="text-4xl font-bold text-gray-900"><%= jumlahTugas %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-between items-center mb-8">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">
                            <i class="fas fa-table mr-3 text-purple-600"></i>
                             Daftar Nilai Tugas
                        </h2>
                        <p class="text-gray-600">Riwayat pengumpulan dan nilai tugas Anda</p>
                    </div>
                    <a href="/rekapNilai/generate-pdf" class="btn-primary text-white px-8 py-4 rounded-2xl font-bold text-lg flex items-center space-x-3 shadow-lg">
                        <i class="fas fa-file-pdf text-2xl"></i>
                        <span> Ekstrak PDF</span>
                    </a>
                </div>

                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-100 border-4 border-red-400 text-red-700 px-6 py-4 rounded-2xl mb-8">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-triangle text-2xl mr-3"></i>
                            <span class="text-lg"><%= error %></span>
                        </div>
                    </div>
                <% } %>

                <!-- Tabel Rekap Nilai -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-4 border-gray-100">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="gradient-bg text-white">
                                <tr>
                                    <th class="px-8 py-6 text-center font-bold text-lg">
                                        <i class="fas fa-hashtag mr-3"></i> No
                                    </th>
                                    <th class="px-8 py-6 text-left font-bold text-lg">
                                        <i class="fas fa-book mr-3"></i> Judul Praktikum
                                    </th>
                                    <th class="px-8 py-6 text-center font-bold text-lg">
                                        <i class="fas fa-star mr-3"></i> Nilai
                                    </th>
                                    <th class="px-8 py-6 text-center font-bold text-lg">
                                        <i class="fas fa-clock mr-3"></i> Waktu Pengumpulan
                                    </th>
                                    <th class="px-8 py-6 text-center font-bold text-lg">
                                        <i class="fas fa-file mr-3"></i> Dokumen
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <% if (rekapNilai.length === 0) { %>
                                    <tr>
                                        <td colspan="5" class="px-8 py-12 text-center text-gray-500">
                                            <div class="flex flex-col items-center">
                                                <i class="fas fa-inbox text-6xl mb-6 text-gray-300"></i>
                                                <p class="text-2xl font-semibold mb-2">Belum ada data pengumpulan tugas</p>
                                                <p class="text-lg">Data akan muncul setelah Anda mengumpulkan tugas</p>
                                            </div>
                                        </td>
                                    </tr>
                                <% } else { %>
                                    <% rekapNilai.forEach((item, index) => { %>
                                        <tr class="table-row-hover transition-all duration-300">
                                            <td class="px-8 py-6 text-center">
                                                <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-2xl flex items-center justify-center text-white font-bold text-lg mx-auto">
                                                    <%= (index + 1).toString().padStart(2, '0') %>
                                                </div>
                                            </td>
                                            <td class="px-8 py-6">
                                                <div class="max-w-md">
                                                    <p class="text-lg font-semibold text-gray-900"><%= item.tugas.judul %></p>
                                                </div>
                                            </td>
                                            <td class="px-8 py-6 text-center">
                                                <% if (item.nilai !== null) { %>
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-bold
                                                        <%= item.nilai >= 85 ? 'bg-green-100 text-green-800 border-2 border-green-300' : 
                                                            item.nilai >= 75 ? 'bg-yellow-100 text-yellow-800 border-2 border-yellow-300' : 
                                                            item.nilai >= 60 ? 'bg-orange-100 text-orange-800 border-2 border-orange-300' : 
                                                            'bg-red-100 text-red-800 border-2 border-red-300' %>">
                                                        <i class="fas fa-star mr-2"></i>
                                                        <%= item.nilai %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="text-gray-400 text-lg">-</span>
                                                <% } %>
                                            </td>
                                            <td class="px-8 py-6 text-center text-lg text-gray-600">
                                                <% if (item.waktu_kirim) { %>
                                                    <%= new Date(item.waktu_kirim).toLocaleDateString('id-ID', {
                                                        day: '2-digit',
                                                        month: '2-digit',
                                                        year: 'numeric',
                                                        hour: '2-digit',
                                                        minute: '2-digit'
                                                    }) %>
                                                <% } else { %>
                                                    <span class="text-gray-400">-</span>
                                                <% } %>
                                            </td>
                                            <td class="px-8 py-6 text-center">
                                                <% if (item.file_path) { %>
                                                    <a href="/uploads/<%= item.file_path.split('/').pop() %>" 
                                                       target="_blank" 
                                                       class="btn-secondary text-white px-6 py-3 rounded-xl font-semibold text-lg flex items-center space-x-2 mx-auto w-fit">
                                                        <i class="fas fa-eye"></i>
                                                        <span> Lihat Tugas</span>
                                                    </a>
                                                <% } else { %>
                                                    <span class="text-gray-400 text-lg">-</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html> 