<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tugas - LabCorner</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }
    </style>
  </head>
  <body class="bg-gradient-to-br from-green-50 to-emerald-50 min-h-screen">
    <div class="flex min-h-screen">
      <%- include('sidebar', { currentPage: 'tugas' }) %>

      <main class="flex-1 p-6 lg:p-8 max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8 text-center lg:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full mb-4 lg:mb-6">
            <i class="fas fa-tasks text-white text-2xl"></i>
          </div>
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-3">Tugas Praktikum</h1>
          <p class="text-xl text-gray-600 mb-2">Data Mining</p>
          <div class="w-24 h-1 bg-gradient-to-r from-green-500 to-emerald-500 mx-auto lg:mx-0 rounded-full"></div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-2xl shadow-lg p-6 card-hover border-l-4 border-green-500">
            <div class="flex items-center">
              <div class="p-3 bg-green-100 rounded-full">
                <i class="fas fa-check-circle text-green-600 text-xl"></i>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Sudah dikumpul</p>
                <p class="text-2xl font-bold text-gray-900">8</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-6 card-hover border-l-4 border-red-500">
            <div class="flex items-center">
              <div class="p-3 bg-red-100 rounded-full">
                <i class="fas fa-clock text-red-600 text-xl"></i>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Belum dikumpul</p>
                <p class="text-2xl font-bold text-gray-900">4</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-6 card-hover border-l-4 border-blue-500">
            <div class="flex items-center">
              <div class="p-3 bg-blue-100 rounded-full">
                <i class="fas fa-star text-blue-600 text-xl"></i>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Rata-rata Nilai</p>
                <p class="text-2xl font-bold text-gray-900">85</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Tugas Content -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="gradient-bg px-8 py-6">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold text-white mb-2">üìù Daftar Tugas</h2>
                <p class="text-green-100">Tugas praktikum yang perlu dikumpulkan</p>
              </div>
              <div class="hidden md:block">
                <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                  <i class="fas fa-list-ul text-white text-xl"></i>
                </div>
              </div>
            </div>
          </div>
          
          <div class="p-8">
            <% if (daftarTugas && daftarTugas.length > 0) { %>
              <div class="space-y-6">
                <% daftarTugas.forEach((tugas, index) => { %>
                  <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl shadow-lg overflow-hidden card-hover border border-green-100">
                    <div class="p-6">
                      <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-4">
                          <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-file-alt text-white text-lg"></i>
                          </div>
                          <div>
                            <h3 class="text-xl font-semibold text-gray-900">
                              <%= tugas.judul %>
                            </h3>
                            <p class="text-gray-600 text-sm">Batas waktu: <%= tugas.batas_waktu_formatted %></p>
                          </div>
                        </div>
                        <div class="flex items-center space-x-3">
                          <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                            <%= tugas.status || 'Aktif' %>
                          </span>
                          <a href="/tugas/<%= tugas.id %>" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                            <i class="fas fa-eye mr-2"></i>Lihat Detail
                          </a>
                        </div>
                      </div>
                      <p class="text-gray-600 mb-4"><%= tugas.deskripsi %></p>
                      <div class="flex items-center justify-between text-sm text-gray-500">
                        <span>Dibuat: <%= tugas.dibuat_pada ? tugas.dibuat_pada.toLocaleDateString('id-ID') : 'N/A' %></span>
                        <span>Poin: <%= tugas.poin || '100' %></span>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <div class="text-center py-16">
                <div class="w-24 h-24 bg-gradient-to-r from-green-400 to-emerald-400 rounded-full flex items-center justify-center mx-auto mb-6">
                  <i class="fas fa-clipboard-list text-white text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-3">Belum ada tugas</h3>
                <p class="text-gray-600 text-lg mb-6">Tugas praktikum belum diberikan oleh asisten lab</p>
                <div class="w-32 h-1 bg-gradient-to-r from-green-500 to-emerald-500 mx-auto rounded-full"></div>
              </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>